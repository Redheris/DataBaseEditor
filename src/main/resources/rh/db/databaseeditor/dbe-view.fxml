<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane minHeight="400.0" minWidth="400.0" prefHeight="489.0" prefWidth="783.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rh.db.databaseeditor.DBEditorController">
   <left>
      <VBox fx:id="responsesMenu" alignment="TOP_CENTER" disable="true" prefHeight="441.0" prefWidth="170.0" style="-fx-background-color: #aaaaaa;" BorderPane.alignment="CENTER">
         <children>
            <MenuButton fx:id="tablesMenu" mnemonicParsing="false" prefHeight="25.0" prefWidth="156.0" text="Таблицы" />
         </children></VBox>
   </left>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="responseTable" editable="true" prefWidth="559.0">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <VBox fx:id="addNewRowBlock" alignment="TOP_RIGHT" disable="true">
               <children>
                  <TableView fx:id="newRowTable" editable="true" prefHeight="200.0" prefWidth="200.0">
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <Button fx:id="btnAddRow" mnemonicParsing="false" text="Добавить строку">
                     <VBox.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <top>
      <HBox prefHeight="75.0" prefWidth="783.0" style="-fx-background-color: #7f7f7f;" BorderPane.alignment="CENTER_LEFT">
         <children>
            <HBox fx:id="login_box" alignment="CENTER_LEFT" prefHeight="48.0" prefWidth="576.0" spacing="5.0">
               <children>
                  <TextField fx:id="dbName" promptText="Database Name" text="BOOKSHOP" />
                  <TextField fx:id="username" promptText="Username" />
                  <PasswordField fx:id="password" promptText="Password" />
                  <Button mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="25.0" prefWidth="88.0" text="Соединить" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="310.0" spacing="5.0">
               <children>
                  <VBox fx:id="loginInfo" alignment="CENTER" prefHeight="200.0" prefWidth="0.0" visible="false">
                     <children>
                        <Label text="База данных:">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="dbNameInfo" text="NONE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label text="Авторизовано:">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                        <Label fx:id="usernameInfo" text="NONE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                     </children>
                     <HBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </HBox.margin>
                  </VBox>
                  <TilePane alignment="CENTER" style="-fx-max-width: 200;" />
                  <Button fx:id="logout" disable="true" mnemonicParsing="false" onAction="#onLogoutButtonClick" prefHeight="25.0" prefWidth="99.0" text="Отключиться" />
               </children>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </HBox>
         </children>
      </HBox>
   </top>
</BorderPane>
